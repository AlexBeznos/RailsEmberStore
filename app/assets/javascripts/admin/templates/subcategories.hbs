{{#each itemController="subcategory"}}
  <div class="row">
    <div class="checkbox"><input type="checkbox"></div>
    <div class="number">#</div>
    <div class="name_category sub_category">-- {{name}}</div>
    <div class="url">url</div>
    <div class="parent">{{parent_category.name}}</div>
    <div class="menu_category">
      {{#if menu}}
        {{menu}}
      {{else}}
        -
      {{/if}} 
    </div>
    <div class="sort_category">
      {{#if position}}
        {{position}}
      {{else}}
        -
      {{/if}} 
    </div>
    <div class="destroy" {{action 'destroy'}}><a>X</a></div>
  </div>
  {{render 'subcategories' subcategory_ids}}
{{/each}}